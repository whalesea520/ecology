<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<web-app>
	<filter>
		<filter-name>CloudStore</filter-name>
		<filter-class>com.cloudstore.api.util.Util_MyFilter</filter-class>
	</filter>
	<filter-mapping>
	<filter-name>CloudStore</filter-name>
		<url-pattern>/cloudstore/app/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>CloudStoreInit</servlet-name>
		<servlet-class>com.cloudstore.api.util.Util_InitSys</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<filter>
		<filter-name>CloudStoreCompatible</filter-name>
		<filter-class>com.cloudstore.api.util.Util_CompatibleFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CloudStoreCompatible</filter-name>
		<url-pattern>/workflow/request/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CloudStoreCompatible</filter-name>
		<url-pattern>/formmode/view/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CloudStoreCompatible</filter-name>
		<url-pattern>*.svg</url-pattern>
	</filter-mapping>
		
	
