	<servlet>
		<servlet-name>restservlet</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>com.cloudstore;com.api</param-value>
		</init-param>
	<!--<load-on-startup>1</load-on-startup> -->
	</servlet>
	<servlet-mapping>
		<servlet-name>restservlet</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>

	
	
	<filter-mapping bef-node="filter-mapping" bef-sub-node="url-pattern"  bef-sub-node-cont="/mobile/plugin/*">
		<filter-name>Mobile</filter-name>
		<url-pattern>/cloudstore/*</url-pattern>
	</filter-mapping>
</web-app>