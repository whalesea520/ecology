<?xml version="1.0" encoding="UTF-8"?>
<MEC>
	<id>FCheckbox</id>	<!-- id 插件唯一标识 -->
	<text>128150</text>  <!-- 单(多)选 -->
	<type>2</type>	<!-- 类型，方便对插件进行区分，目前已有：1.普通功能插件，2.表单插件 -->
	<isEnabled>1</isEnabled>	<!-- 是否启用，1或者不填写为启用，0或者其他非1值为禁用 -->
	<order>19</order>	<!-- 插件显示顺序，值越小则显示越靠前，不填写或者无此标签将为整数的最大值 -->
	
	<!-- 插件设计信息配置 -->
	<design>
		<unique>0</unique> <!-- 是否唯一，如果值为1则在自定义页面设计时一个页面最多只能添加一个这种控件，不为1或者不填写此属性则没有此限制 -->
		<resources>	<!-- 依赖资源 -->
			<resource type="js">/mobilemode/js/mec/handler/form/FCheckbox_wev8.js</resource>
			<resource type="css">/mobilemode/css/mec/handler/form/FCheckbox_wev8.css</resource>
			<resource type="css">/mobilemode/css/mec/run/form/FCheckbox_wev8.css</resource>
		</resources>
	</design>
	
	<!-- 插件运行信息配置 -->
	<run java="com.weaver.formmodel.mobile.mec.handler.form.FCheckbox">
		<resources>	<!-- 依赖资源 -->
			<resource type="js">/mobilemode/js/mec/run/form/FCheckbox_wev8.js</resource>
			<resource type="css">/mobilemode/css/mec/run/form/FCheckbox_wev8.css?v=2017040101</resource>
		</resources>
	</run>
	
	<!-- 内容模板 -->
	<contentTemplate>
		<![CDATA[
			<div class="Design_FCheckbox_Field ${Design_Field_Required}" id="div${theId}">
				<div class="Design_FCheckbox_Fieldlabel Formfield-Label">${fieldlabel}</div>
				<div class="Design_FCheckbox_Fielddom ${layoutClass}">
					<div class="FCheckboxContainer" cb-type="${cbType}">
						<ul>
							$mec_forstart$
							<li data-value="${cb_value}" class="${checkedClass}" readonly="${readonly}"><div>${cb_name}</div></li>
							$mec_forend$
						</ul>
					</div>
					<input type="text" style="display:none;" name="fieldname_${fieldname}" value="${value}" data-role="none" id="${theId}" fieldlabel="${fieldlabel}" require="${required}" />
			  	</div>
			</div>
		]]>
	</contentTemplate>
</MEC>
