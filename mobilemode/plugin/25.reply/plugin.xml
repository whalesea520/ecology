<?xml version="1.0" encoding="UTF-8"?>
<MEC>
	<id>Reply</id>	<!-- id 插件唯一标识 -->
	<text>128123</text>  <!-- 回复 -->
	<type>1</type>	<!-- 类型，方便对插件进行区分，目前已有：1.普通功能插件，2.表单插件 -->
	<isEnabled>1</isEnabled>	<!-- 是否启用，1或者不填写为启用，0或者其他非1值为禁用 -->
	<order>25</order>	<!-- 插件显示顺序，值越小则显示越靠前，不填写或者无此标签将为整数的最大值 -->
	
	<!-- 插件设计信息配置 -->
	<design>
		<unique>1</unique> <!-- 是否唯一，如果值为1则在自定义页面设计时一个页面最多只能添加一个这种控件，不为1或者不填写此属性则没有此限制 -->
		<resources>	<!-- 依赖资源 -->
			<resource type="js">/mobilemode/js/mec/handler/Reply_wev8.js</resource>
			<resource type="css">/mobilemode/css/mec/handler/Reply_wev8.css</resource>
		</resources>
	</design>
	
	<!-- 插件运行信息配置 -->
	<run java="com.weaver.formmodel.mobile.mec.handler.Reply">
		<resources>	<!-- 依赖资源 -->
			<resource type="js">/mobilemode/js/mec/run/Reply_wev8.js</resource>
			<resource type="css">/mobilemode/css/mec/run/Reply_wev8.css</resource>
		</resources>
	</run>
	
	<!-- 内容模板 -->
	<contentTemplate>
		<![CDATA[
			<div class="Design_Reply_Container" id="replyDivContainer${theId}" isDefault="${isDefault}">
				<form class="Design_Reply_Form" id="replyForm${theId}" method="post" action="${replyUrl}" isSubmit="0" isAuto="${isAuto}">
					<input type="text" class="Design_Reply_Content" name="${contentName}" data-role="none" placeholder="${msgtip}" />
					$inputHidden$
				</form>
				<div class="Design_Reply_Btn" id="replyBtn${theId}" title="${replyName}">${replyName}</div>
			</div>
		]]>
	</contentTemplate>
</MEC>
