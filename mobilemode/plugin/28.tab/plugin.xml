<?xml version="1.0" encoding="UTF-8"?>
<MEC>
	<id>Tab</id>	<!-- id 插件唯一标识 -->
	<text>128127</text>  <!-- Tab页 -->
	<type>1</type>	<!-- 类型，用于对插件进行分类，参见枚举类com.weaver.formmodel.admin.ComponentType -->
	<isEnabled>1</isEnabled>	<!-- 是否启用，1或者不填写为启用，0或者其他非1值为禁用 -->
	<order>28</order>	<!-- 插件显示顺序，值越小则显示越靠前，不填写或者无此标签将为整数的最大值 -->
	
	<!-- 插件设计信息配置 -->
	<design>
		<unique>1</unique> <!-- 是否唯一，如果值为1则在自定义页面设计时一个页面最多只能添加一个这种控件，不为1或者不填写此属性则没有此限制 -->
		<resources>	<!-- 依赖资源 -->
			<resource type="js">/mobilemode/js/mec/handler/Tab_wev8.js?=2017032101</resource>
			<resource type="css">/mobilemode/css/mec/handler/Tab_wev8.css?v=2017032101</resource>
		</resources>
	</design>
	
	<!-- 插件运行信息配置 -->
	<run java="com.weaver.formmodel.mobile.mec.handler.Tab">
		<resources>	<!-- 依赖资源 -->
			<resource type="js">/mobilemode/js/mec/run/Tab_wev8.js?v=2017032201</resource>
			<resource type="css">/mobilemode/css/mec/run/Tab_wev8.css?v=2016111002</resource>
		</resources>
	</run>
	
	<!-- 内容模板 -->
	<contentTemplate>
		<![CDATA[
			<div id="tab${theId}" class="tabContainer">			        			
				<div class="tabTitle">            				
					<ul>
						$mec_tabTitle_forstart$
						<li class="${selected}" href="#tabPage${tabOrder}">${tabName}</li>
						$mec_tabTitle_forend$
					</ul>				            				
				</div>
				<div class="tabContent">
					$mec_tabContent_forstart$
					<div class="beTabPage ${selected}" id="tabPage${tabOrder}">	
						${mecs}																
					</div>
					$mec_tabContent_forend$
				</div>					
			</div>
		]]>
	</contentTemplate>
</MEC>
