<?xml version="1.0" encoding="UTF-8"?>
<MEC>
	<id>Slide</id>	<!-- id 插件唯一标识 -->
	<text>128105</text>  <!-- 幻灯片 -->
	<type>1</type>	<!-- 类型，方便对插件进行区分，目前已有：1.普通功能插件，2.表单插件 -->
	<isEnabled>1</isEnabled>	<!-- 是否启用，1或者不填写为启用，0或者其他非1值为禁用 -->
	<order>2</order>	<!-- 插件显示顺序，值越小则显示越靠前，不填写或者无此标签将为整数的最大值 -->
	
	<!-- 插件设计信息配置 -->
	<design>
		<unique>0</unique> <!-- 是否唯一，如果值为1则在自定义页面设计时一个页面最多只能添加一个这种控件，不为1或者不填写此属性则没有此限制 -->
		<resources>	<!-- 依赖资源 -->
			<resource type="js">/mobilemode/js/mec/handler/Slide_wev8.js</resource>
			<resource type="css">/mobilemode/css/mec/run/Slide_wev8.css</resource>
			<resource type="css">/mobilemode/css/mec/handler/Slide_wev8.css</resource>
		</resources>
	</design>
	
	<!-- 插件运行信息配置 -->
	<run java="com.weaver.formmodel.mobile.mec.handler.Slide">
		<resources>	<!-- 依赖资源 -->
			<resource type="css">/mobilemode/css/mec/run/Slide_wev8.css?v=2016091803</resource>
			<resource type="js">/mobilemode/jqmobile4/plugins/swipe/swipe.min_wev8.js</resource>
			<resource type="js">/mobilemode/js/mec/run/Slide_wev8.js?v=2016091802</resource>
		</resources>
	</run>
	
	<!-- 内容模板 -->
	<contentTemplate>
		<![CDATA[
		    <div id="silde${theId}" class="swipe slide" style="height: ${height}px;">
				<div class='swipe-wrap'>
					$mec_forstart$
					<div onclick="${action}">
						<img class="pic" ${pic_path}/>
						<div class="slide-overlay"><div class="circle"></div></div>
						<div class="desc">${pic_desc}</div>
					</div>
					$mec_forend$
				</div>
				<div class="slide-point">
					$mec_forstart$
					<b class="${pointClass}"></b>
					$mec_forend$
				</div>
			</div>	
		]]>
	</contentTemplate>
</MEC>
