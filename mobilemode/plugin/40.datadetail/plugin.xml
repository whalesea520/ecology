<?xml version="1.0" encoding="UTF-8"?>
<MEC>
	<id>DataDetail</id>	<!-- id 插件唯一标识 -->
	<text>128132</text>  <!-- 数据明细 -->
	<type>1</type>	<!-- 类型，方便对插件进行区分，目前已有：1.普通功能插件，2.表单插件 -->
	<isEnabled>1</isEnabled>	<!-- 是否启用，1或者不填写为启用，0或者其他非1值为禁用 -->
	<order>32</order>	<!-- 插件显示顺序，值越小则显示越靠前，不填写或者无此标签将为整数的最大值 -->
	
	<!-- 插件设计信息配置 -->
	<design>
		<unique>0</unique> <!-- 是否唯一，如果值为1则在自定义页面设计时一个页面最多只能添加一个这种控件，不为1或者不填写此属性则没有此限制 -->
		<resources>	<!-- 依赖资源 -->
			<resource type="js">/mobilemode/js/mec/handler/DataDetail_wev8.js?v=2016081701</resource>
			<resource type="css">/mobilemode/css/mec/handler/DataDetail_wev8.css</resource>
			<resource type="css">/mobilemode/css/mec/run/DataDetail_wev8.css?v=2016081701</resource>
		</resources>
	</design>
	
	<!-- 插件运行信息配置 -->
	<run java="com.weaver.formmodel.mobile.mec.handler.DataDetail">
		<resources>	<!-- 依赖资源 -->
			<resource type="css">/mobilemode/css/mec/run/DataDetail_wev8.css</resource>
			<resource type="js">/mobilemode/js/baidu/api_https_wev8.js</resource>
			<resource type="js">/mobilemode/js/mec/run/DataDetail_wev8.js?v=2016042702</resource>
		</resources>
	</run>
	
	<!-- 内容模板 -->
	<contentTemplate>
		<![CDATA[
			<div class="dataDetailContainer" id="NMEC_${theId}">
				<ul class="dataDetailUlFields">
					$mec_forstart$
						<li><span class="entryName">${entryName}</span><span class="entryContent">${entryContent}</span></li>
					$mec_forend$
				</ul>
			</div>
		]]>
	</contentTemplate>
</MEC>
